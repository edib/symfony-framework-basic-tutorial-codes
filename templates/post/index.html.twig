{% extends('base.html.twig') %}

{% block body %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
{% for post in posts %}
<tr>
<td>{{ post.id }}</td>
<td><a href="{{ path('post.show', {id:post.id}) }}">{{ post.title }}</a></td>
</tr>
{% endfor %}
</tbody>
</table>
{% endblock %}